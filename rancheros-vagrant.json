{
  "builders": [
    {
      "boot_command": [
        "<enter><wait>",
        "sudo passwd {{user `ssh-username`}}<enter><wait>",
        "{{user `ssh-password`}}<enter><wait>",
        "{{user `ssh-password`}}<enter><wait>"
      ],
      "boot_wait": "60s",
      "disk_size": "8000",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "iso_checksum": "{{user `iso-checksum-type`}}:{{user `iso-checksum`}}",
      "iso_interface": "sata",
      "iso_url": "https://github.com/rancher/os/releases/download/{{user `rancheros-version`}}/rancheros.iso",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh-password`}}",
      "ssh_timeout": "4s",
      "ssh_username": "{{user `ssh-username`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic1",
          "nat"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natpf1",
          "ssh,tcp,,2222,,22"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "./output/vagrant/x86_64/prod/{{user `version`}}/rancheros_{{.Provider}}.box",
        "type": "vagrant",
        "vagrantfile_template": "includes/vagrantfile.tpl"
      }
    ]
  ],
  "provisioners": [
    {
      "destination": "/tmp/vagrant.yml",
      "source": "cloud-config/vagrant.yml",
      "type": "file"
    },
    {
      "destination": "build.sh",
      "source": "scripts/build.sh",
      "type": "file"
    }
  ],
  "variables": {
    "iso-checksum": "d70520b1edd51d3f45a407fbffd820ec4b5cc4a6b7a73d822a687facd9c07e92",
    "iso-checksum-type": "sha256",
    "rancheros-version": "v1.5.6",
    "ssh-password": "rancher",
    "ssh-username": "rancher"
  }
}

